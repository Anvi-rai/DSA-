String Builder

class Strings {

    public static void main(String[] args) {
        StringBuilder sb = new StringBuilder("Tonny");
        System.err.println(sb);

        sb.insert(2, 'n');
        System.err.println(sb);

        sb.delete(2, 3);
        System.err.println(sb);

    }
} 



class Strings {

    public static void main(String[] args) {
        
        StringBuilder sb = new StringBuilder("h");
        sb.append("e");
        sb.append("l");
        sb.append("l");
        sb.append("o");
        System.out.println(sb);
    }
}

